<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#033C5A"
    tools:context=".Splash_screen">

    <ImageView
        android:id="@+id/imb_splash_bg"
        android:layout_width="50dp"
        android:layout_height="60dp"

        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/rlv_holder"
        app:srcCompat="@drawable/cfff"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageView_topleft"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cf_lefttop"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageView_bottom_right"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cf_fotter"
        tools:ignore="RtlCompat" />

    <RelativeLayout
        android:id="@+id/rlv_holder"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView_now"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/rlv_holder"
        android:src="@drawable/now"
        tools:ignore="RtlCompat" />
</RelativeLayout>