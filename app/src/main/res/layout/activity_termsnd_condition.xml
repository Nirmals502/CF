<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Find_offer_screen">

    <RelativeLayout
        android:id="@+id/RLV_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#033C5A"
        tools:ignore="RtlCompat">

        <ImageView
            android:id="@+id/_header_tittle"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/header_text" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RLV_header"
        android:layout_centerHorizontal="true"
        android:background="#033C5A">

        <RelativeLayout
            android:id="@+id/rlv_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="13dp"
                android:text="Terms and\nCondition"
                android:textColor="@android:color/white"
                android:textSize="17dp" />

            <RelativeLayout
                android:id="@+id/rlv_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView7"

                android:layout_marginLeft="27dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="220dp"
                android:background="@android:color/white">

            </RelativeLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlv_divider"
                android:layout_alignStart="@+id/textView7"

                android:layout_marginTop="15dp"
                android:text="Welcome"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"

                android:layout_marginLeft="27dp"

                android:layout_marginTop="10dp"
                android:layout_marginRight="27dp"
                android:text="The Cadillac Fairview Corporation Limited welcomes you to our properties, websites and mobile applications. As a guest, service provider or client (which includes retailers and occupants of our properties), we want you to understand our personal information management practices. In this Privacy Policy, you will find information about the principles that guide us in how we collect, use and disclose personal information through our websites, mobile applications and technologies installed on or used in our properties, and your choices regarding the use of your personal information. "
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_alignStart="@+id/textView7"
                android:layout_marginTop="15dp"
                android:text="Overview"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView12"

                android:layout_marginLeft="27dp"
                android:layout_marginTop="10dp"

                android:layout_marginRight="27dp"
                android:text="We collect personal information that you provide to us as well as information on how you use our websites, mobile applications, WIFI, and other products and services. We use this information for the purposes of providing services, securing our properties, websites and mobile applications, meeting our legal obligations, advertising and marketing our services and, in some cases, the products and services of our clients (including developing interest-based advertising using information about your interests, your use of our websites, mobile applications, WIFI, products and services, and your visits to our properties). We also use this information for researching and developing new products and techniques to improve our services, business, our properties, websites, and mobile applications.\n\nWe use third parties to assist us in our business. Although we store personal information primarily in Canada, we may use services that store your personal information outside of Canada.\n\nWe take measures, and we require our service providers to take measures, to protect your personal information; however, no system of protection can guarantee the protection of your personal information.\n\nWe may share the results of our research with others, including our clients. However, we do not disclose your personal information except (a) with your consent (for example, so that you can receive offers from our clients) and (b) where permitted or required by law to disclose your personal information without your consent. If we sell all or part of our business, your personal information may be disclosed in the course of deciding to enter into that sale and as part of the sale.\n\nWe hope that you find this Privacy Policy informative. Please check back frequently for updates. Your visits to our properties and your use of our websites and mobile applications will be subject to the most current version of the Privacy Policy at the time of your visit or use. "
                android:textColor="@android:color/white" />

            <RelativeLayout
                android:id="@+id/rlv_text_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="27dp">

                <TextView
                    android:id="@+id/myTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/read_our_full_cadillac_fairview_privacy_policy"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/view"

                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/myTextView"
                    android:layout_alignStart="@+id/myTextView"
                    android:layout_alignEnd="@+id/myTextView"
                    android:background="@android:color/white"
                    tools:ignore="RtlCompat" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlv_divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rlv_text_holder"

                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="220dp"
                android:background="@android:color/white"></RelativeLayout>

            <CheckBox
                android:id="@+id/checkBox_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlv_divider2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:buttonTint="@android:color/white"
                android:text="I agree to terms and conditions"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/checkBox_terms_conditions"

                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bottom_image" />

            <Button
                android:id="@+id/button_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/checkBox_terms_conditions"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="27dp"
                android:layout_marginBottom="68dp"
                android:background="@drawable/button_round_login"
                android:text="Confirm"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>